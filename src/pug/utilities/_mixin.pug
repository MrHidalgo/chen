//- MIXIN :: START

include ./_mixin/_hamburger
include ./_mixin/_swiper
include ./_mixin/_modal

mixin mainSection(classMod, img, title, breadcrumbsArr)
  section#basic.basic(class!= "basic--" + classMod)
    .c-grid
      img.basic__visual(src="img/img-basic-bg--" + img + ".jpg" srcset="img/img-basic-bg--" + img + "@2x.jpg 2x" alt="")

      .basic__box
        div
          .basic__box-content
            h1.basic__title.c-title!= title
            .basic__breadcrumbs
              each val, idx in breadcrumbsArr
                if(idx === breadcrumbsArr.length - 1)
                  p!= val
                else
                  a(href="#")!= val

//- MIXIN :: END
